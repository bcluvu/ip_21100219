let input = prompt("네 자리 정수를 입력해주세요");

if (input && !isNaN(input) && input.length === 4) {
  let num = parseInt(input); 

 
  let thousands = parseInt(num / 1000); 
  let hundreds = parseInt((num % 1000) / 100); 
  let tens = parseInt((num % 100) / 10); 
  let ones = num % 10;

 
  alert(`천의 자리: ${thousands}, 백의 자리: ${hundreds}, 십의 자리: ${tens}, 일의 자리: ${ones}`);
} else {
  alert("올바른 네 자리 정수를 입력해주세요!");
}
