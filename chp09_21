function factorial(n) {
    if (n < 0) {
      return "음수는 팩토리얼을 계산할 수 없습니다."; 
    }
    if (n === 0 || n === 1) {
      return 1; 
    }
    let result = 1;
    for (let i = 2; i <= n; i++) {
      result *= i; 
    }
    return result;
  }
  
  let input = prompt("팩토리얼을 계산할 숫자를 입력하세요:");
  if (input !== null && !isNaN(input)) {
    let num = parseInt(input);
    let output = factorial(num);
    alert(`${num}! = ${output}`);
  } else {
    alert("유효한 숫자를 입력해주세요!");
  }
  
